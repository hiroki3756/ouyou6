<ol>
				<% @book2.book_comments.each do |book_comment| %>
					<li id="comment-<%= @book2.id %>">
						<div id="comment-body bb">
							<div class="comment-text">
								<div class="comment-author clearfix">
									<a href="#" class="link-author"><%= book_comment.user.name %></a>
								</div>
								<div class="comment-entry"><%= book_comment.comment %></div>
								<% if book_comment.user_id == current_user.id %>
								<%= link_to "Destroy",book_book_comment_path(book_comment), method: :delete, remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book2.id}" %>
								<% end %>
							</div>
						</div>
					</li>
				<% end %>
			</ol>